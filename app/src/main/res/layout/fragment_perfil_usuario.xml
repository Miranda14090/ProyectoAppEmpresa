<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/perfil_color"
    tools:context=".view.fragments.PerfilUsuario">

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="311dp"
        android:background="@drawable/borde_circular"
        android:text="@string/cerrarSesion"
        android:textColor="@color/blanco" />

    <LinearLayout
        android:id="@+id/bg2"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
       android:background="@drawable/perfil_color2" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_talento_azteca" />

        <TextView
            android:id="@+id/txtDatosEmpleadoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="14dp"
            android:textColor="@color/Colornegro"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txtTituloHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg2"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:textSize="18dp"
        android:background="@color/primaryColor"
        android:textColor="@color/blanco"
        android:elevation="12dp"
        android:text="@string/HistorialAsistencia" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAsistencia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtTituloHistorial"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp" />


</RelativeLayout>

