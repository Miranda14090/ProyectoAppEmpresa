<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.Reportes">



      <LinearLayout
          android:id="@+id/layoutTiposReportes"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                  <TextView
                      android:id="@+id/tvReporte"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_margin="15dp"
                      android:text="@string/EdReporte"
                      android:textColor="@color/Colornegro"
                      android:textSize="30dp"></TextView>


                  <TextView
                      android:layout_gravity="bottom|center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      android:text="@string/tvLisReportes"
                      android:textColor="@color/Colornegro"
                      android:textSize="30dp"></TextView>

                  <ImageButton
                      android:id="@+id/btnListaReportes"
                      style="@style/Widget.AppCompat.Button.Borderless.Colored"
                      android:layout_width="70dp"
                      android:layout_height="70dp"
                      android:layout_gravity="right"
                      android:src="@drawable/reporte" />


            </FrameLayout>


            <GridLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:rowCount="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                >

                  <androidx.cardview.widget.CardView
                      android:id="@+id/cardViewTecnico"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      android:layout_margin="1dp"
                      app:cardCornerRadius="12dp"
                      app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                              <ImageView
                                  android:layout_width="50dp"
                                  android:layout_height="50dp"
                                  android:src="@drawable/tecnico" />

                              <TextView
                                  android:id="@+id/tvTecnico"
                                  android:textColor="@color/gris"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="12dp"
                                  android:text="@string/tvTecnico"
                                  android:textSize="12sp" />
                        </LinearLayout>
                  </androidx.cardview.widget.CardView>


                  <androidx.cardview.widget.CardView
                      android:id="@+id/cardViewMantenimiento"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      android:layout_margin="1dp"
                      app:cardCornerRadius="12dp"
                      app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                              <ImageView
                                  android:layout_width="50dp"
                                  android:layout_height="50dp"
                                  android:layout_gravity="center"
                                  android:src="@drawable/mantenimiento" />

                              <TextView
                                  android:id="@+id/tvMantenimiento"
                                  android:textColor="@color/gris"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="12dp"
                                  android:text="@string/tvMantenimiento"
                                  android:textSize="12sp" />
                        </LinearLayout>


                  </androidx.cardview.widget.CardView>


                  <androidx.cardview.widget.CardView
                      android:id="@+id/cardViewAdministrativo"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      android:layout_margin="1dp"
                      app:cardCornerRadius="12dp"
                      app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                              <ImageView
                                  android:layout_width="50dp"
                                  android:layout_height="50dp"
                                  android:layout_gravity="center"
                                  android:src="@drawable/administracion" />

                              <TextView
                                  android:id="@+id/tvAdministrativo"
                                  android:textColor="@color/gris"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="12dp"
                                  android:text="@string/tvAdministrativo"
                                  android:textSize="12sp" />
                        </LinearLayout>
                  </androidx.cardview.widget.CardView>


                  <androidx.cardview.widget.CardView
                      android:id="@+id/cardViewServicio"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      android:layout_margin="1dp"
                      app:cardCornerRadius="12dp"
                      app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                              <ImageView
                                  android:layout_width="50dp"
                                  android:layout_height="50dp"
                                  android:layout_gravity="center"
                                  android:src="@drawable/servicio" />

                              <TextView
                                  android:id="@+id/tvServicio"
                                  android:textColor="@color/gris"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="12dp"
                                  android:text="@string/tvServicio"
                                  android:textSize="12sp" />
                        </LinearLayout>


                  </androidx.cardview.widget.CardView>


            </GridLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                  <EditText
                      android:id="@+id/edtDescipcionRepFrac"
                      android:layout_marginTop="30dp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:visibility="invisible"
                      android:hint="@string/tvDescripcionR"
                      android:maxLength="100"
                      />
                  <Button
                      android:id="@+id/boton_EnviarReporte"
                      android:visibility="invisible"
                      android:layout_width="250dp"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/contrasena"
                      android:layout_gravity="center"
                      android:background="@drawable/borde_circular"
                      android:text="@string/btnEnviarReporte"
                      android:textColor="@color/blanco"
                      android:textSize="22sp"
                      android:textStyle="bold" />
            </LinearLayout>

      </LinearLayout>



</ScrollView>